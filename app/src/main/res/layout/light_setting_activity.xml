<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="明暗度" />

        <SeekBar
            android:id="@+id/seekBar_alpha"
            style="@style/seekbar_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:progress="123" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top">

        <ImageView
            style="@style/color_image_view"
            android:layout_toLeftOf="@+id/seekBar_red"
            android:layout_toStartOf="@+id/seekBar_red"
            android:background="#ff0000" />

        <SeekBar
            android:id="@+id/seekBar_red"
            style="@style/seekbar_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top">

        <ImageView
            style="@style/color_image_view"
            android:layout_toLeftOf="@+id/seekBar_green"
            android:layout_toStartOf="@+id/seekBar_green"
            android:background="#00ff00" />

        <SeekBar
            android:id="@+id/seekBar_green"
            style="@style/seekbar_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top">

        <TextView
            style="@style/color_image_view"
            android:layout_toLeftOf="@+id/seekBar_blue"
            android:layout_toStartOf="@+id/seekBar_blue"
            android:background="#0000ff" />

        <SeekBar
            android:id="@+id/seekBar_blue"
            style="@style/seekbar_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/seekBar_light"
            android:layout_toStartOf="@+id/seekBar_light"
            android:text="亮度" />

        <SeekBar
            android:id="@+id/seekBar_light"
            style="@style/seekbar_style"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:gravity="center">

        <Button
            android:id="@+id/main_back_btn"
            style="@style/main_btn_style"
            android:text="返回" />

        <Button
            android:id="@+id/main_exit_btn"
            style="@style/main_btn_style"
            android:layout_marginLeft="40dp"
            android:text="退出" />
    </LinearLayout>

</LinearLayout>