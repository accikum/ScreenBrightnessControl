<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true" >
        <layer-list>

            <item
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp">
                <shape android:shape="oval">
                    <solid android:color="#FFcbd6df" />
                </shape>
            </item>
            <item
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="90"
                        android:startColor="#ffffff"
                        android:endColor="#ffffff00"/>
                </shape>
            </item>

            <!-- center circle -->
            <item
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp">
                <shape android:shape="oval">
                    <size android:height="5dp"
                        android:width="5dp"/>
                    <solid android:color="#ffbd0adc" />
                    <!--<stroke-->
                    <!--android:width="1dp"-->
                    <!--android:color="#FFFCFCFC" />-->
                </shape>
            </item>

        </layer-list>

    </item>

    <!-- 焦点状态 -->
    <item android:state_focused="true" android:drawable="@drawable/thumb_button"/>

    <!-- 默认状态 -->
    <item  android:drawable="@drawable/thumb_button" />

</selector>