<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- outer rectangle -->

    <item>
        <shape android:shape="oval">
            <solid android:color="#FFACB8C3" />
            <stroke
                android:width="12dp"
                android:color="#fffdff99"
                android:dashGap="5dp"
                android:dashWidth="1dp" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>
    <item
        android:bottom="-5dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="#7befefef" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFACB8C3" />
            <stroke android:width="12dp" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>
    <!-- inner shadow of outer circle -->
    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#FFbdcad6" />
            <gradient
                android:angle="90"
                android:endColor="#000000"
                android:startColor="#ffffff"
                android:type="sweep" />
        </shape>
    </item>
    <!-- center circle -->
    <item
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFCFCFC" />
            <gradient
                android:angle="270"
                android:endColor="#FFCFD7DD"
                android:startColor="#FFF0F5F9" />
        </shape>
    </item>
</layer-list>
